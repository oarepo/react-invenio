{
  "context": "default",
  "layout": "search-results",
  "composition": {
    "type": "item",
    "props": {
      "item": { "$data-key": "listIndex" },
      "extraTop": {
        "className": "labels-actions"
      },
      "header": {
        "as": "h2"
      }
    },
    "contentAreas": {
      "extraTop": [
        {
          "type": "label-publication-info",
          "props": {
            "size": "tiny",
            "color": "blue",
            "$data-datePublished": "ui.publication_date_l10n_long",
            "$data-version": "ui.version"
          }
        },
        {
          "type": "label",
          "props": {
            "size": "tiny",
            "color": "grey",
            "$data-children": {
              "path": "ui.resource_type.title_l10n",
              "default": "No resource type"
            }
          }
        },
        {
          "type": "label-access-rights",
          "props": {
            "$data-accessRights": "ui.access_status"
          }
        }
      ],
      "header": [
        {
          "type": "record-link",
          "props": {
            "$data-id": "id",
            "$data-children": "metadata.title"
          }
        }
      ],
      "description": [
        {
          "type": "text-shortened",
          "props": {
            "length": 350,
            "$data-children": {
              "path": "ui.description_stripped",
              "default": "No description"
            }
          }
        }
      ],
      "extraBottom": [
        {
          "type": "label-subjects",
          "props": {
            "size": "tiny",
            "$data-subjects": "ui.subjects"
          }
        },
        {
          "type": "label-date-created",
          "props": {
            "$data-dateCreated": "ui.created_date_l10n_long"
          }
        }
      ]
    }
  }
}
